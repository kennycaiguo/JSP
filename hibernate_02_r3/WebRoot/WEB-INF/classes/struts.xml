<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<package name="default" namespace="/svse" extends="struts-default">
		
		<action name="User_pre_*">
			<result>/User/{1}.jsp</result>
		</action>
		
		<action name="User_pre_update" class="action.UserAction" method="preUpdate">
			<result>/User/update.jsp</result>
		</action>
		
		<action name="User_list" class="action.UserAction" method="list">
			<result>/User/list.jsp</result>
		</action>
		
		<action name="User_*" class="action.UserAction" method="{1}">
			<result type="redirectAction">User_list</result>
		</action>
		
		<action name="User_detail" class="action.UserAction" method="detail">
			<result>/User/detail.jsp</result>
		</action>
		
	</package>
</struts>    
